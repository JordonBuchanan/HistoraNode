<% include partials/header %>

<div class="container CreatePage">
        <div class="row">
            <div class="col-sm-12">
                <h2>Create a Post:</h2>
            </div>
            <div style="width:50%; margin: 25px auto;">
                <form action="/Forum" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name"placeholder="title">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" type="textarea" rows="5" name="text" placeholder="text"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Post</button>
                    </div>
                </form>
                <a href="/Forum">Go Back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>