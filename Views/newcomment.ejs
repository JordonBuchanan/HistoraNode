<% include partials/header %>

<div class="container CreatePage">
        <div class="row">
            <div class="col-sm-12">
                <h2>Create a Comment to <%= Post.name %>:</h2>
            </div>
            <div style="width:50%; margin: 25px auto;">
                <form action="/Forum/<%= Post._id %>/comments" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" type="textarea" rows="5" name="comment[text]" placeholder="text"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="myBtnAlt2">Comment</button>
                    </div>
                </form>
                <a href="/Forum/<%= Post._id %>">Go Back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>