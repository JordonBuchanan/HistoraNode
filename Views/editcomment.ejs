<% include partials/header %>

<div class="container CreatePage">
        <div class="row">
            <div class="col-sm-12">
                <h2>Edit Comment:</h2>
            </div>
            <div style="width:50%; margin: 25px auto;">
                <form action="/Forum/<%= Post_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="textarea" rows="5" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Comment</button>
                    </div>
                </form>
                <a href="/Forum/<%= Post_id %>">Go Back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>