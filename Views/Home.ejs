<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-sm-12 Intro">
            <h1><em>Histora</em></h1><hr>
        </div>
        <div class="col-m-12 logins">
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#RegisterModal">Register</button>
            <div class="modal fade" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="RegisterModal" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title" id="RegisterTitle">Register to Histora</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                            <form action="/register" method="POST">
                                <input type="text" name="username" placeholder="username">
                                <input type="password" name="password" placeholder="password">
                                <input type="email" name="email" placeholder="Hey@outlook.com">
                                <input type="text" name="firstName" placeholder="lastName">
                                <input type="text" name="lastName" placeholder="lastName">
                                <input type="text" name="website" placeholder="website">
                                <button class="btn btn-primary">Register</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>                        </div>
                    </div>
                    </div>
                </div>
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#SignInModal"><i class="fa fa-user-circle" aria-hidden="true"></i> Sign In</button>
            <div class="modal fade" id="SignInModal" tabindex="-1" role="dialog" aria-labelledby="SignInModal" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="SignInModalTitle">Sign into Histora</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <div class="modal-body">
                    <form action="/login" method="POST">
                        <input type="text" name="username" placeholder="username">
                        <input type ="password" name="password" placeholde="password">
                        <button class="btn btn-primary" value="submit">Sign In</button>
                    </form>
                    </div>
                    <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
</div>
<% include partials/footer %>