<% include partials/header %>

<div class="container CreatePage">
        <div class="row">
            <div class="col-sm-12">
                <h2>Edit <%= Post.name %>:</h2>
            </div>
            <div style="width:50%; margin: 25px auto;">
                <form action="/Forum/<%= Post._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="Post[name]" value="<%= Post.name %>" placeholder="title">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="Post[image]" value="<%= Post.image %>" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="Post[textField]" value="<%= Post.textField %>" placeholder="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Post</button>
                    </div>
                </form>
                <a href="/Forum">Go Back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>